{
  "name": "github-packages-npm-monorepo-template",
  "description": "GitHub Packages npm Monorepo Package Template",
  "private": true,
  "scripts": {
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "lint:ci": "biome ci",
    "changeset:version": "changeset version && pnpm lint:fix",
    "changeset:publish": "pnpm -r build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.7"
  },
  "packageManager": "pnpm@10.19.0"
}
